<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.examplejdbc.term3java.CustomerController">
   <VBox prefHeight="494.0" prefWidth="1140.0">
      <children>
          <TableView fx:id="tvCustomer" prefHeight="477.0" prefWidth="1142.0">
              <columns>
                  <TableColumn fx:id="colCustomerId" prefWidth="49.0" text="Id" />
                  <TableColumn fx:id="colCustFirstName" prefWidth="99.0" text="First Name" />
                  <TableColumn fx:id="colCustLastName" prefWidth="111.0" text="Last Name" />
                  <TableColumn fx:id="colCustAddress" prefWidth="118.0" text="Address" />
                  <TableColumn fx:id="colCustCity" prefWidth="61.0" text="City" />
                  <TableColumn fx:id="colCustProv" prefWidth="61.0" text="Province" />
                  <TableColumn fx:id="colCustPostal" prefWidth="81.0" text="Postal Code" />
                  <TableColumn fx:id="colCustCountry" prefWidth="56.0" text="Country" />
                  <TableColumn fx:id="colCustHomePhone" prefWidth="154.0" text="Home Phone" />
                  <TableColumn fx:id="colCustBusPhone" prefWidth="123.0" text="Business Phone" />
                  <TableColumn fx:id="colCustEmail" prefWidth="154.0" text="Email" />
                  <TableColumn fx:id="colAgentId" prefWidth="71.0" text="Agent Id" />
              </columns>
          </TableView>
         <HBox alignment="CENTER" spacing="10">
            <children>
               <Button fx:id="btnAddCustomer" mnemonicParsing="false" onMouseClicked="#initialize" text="Add Customer" />
               <Button fx:id="btnModifyCustomer" mnemonicParsing="false" text="Modify Customer" />
               <Button fx:id="btnDeleteCustomer" mnemonicParsing="false" text="Delete Customer" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
