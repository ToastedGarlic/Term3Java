<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.examplejdbc.term3java.MainController">
    <top>
        <!-- MenuBar with MenuItems. Actions should be handled in the MainController -->
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="tpCustomer" text="Customers">
                    <!-- Content loaded by the controller -->
                </Tab>
                <Tab fx:id="tpPackages" text="Packages">
                    <!-- Content loaded by the controller -->
                </Tab>
                <Tab fx:id="tpBookings" text="Bookings">
                    <!-- Content loaded by the controller -->
                </Tab>
            <Tab fx:id="tpMessenger" text="Support Messenger" />
            </tabs>
        </TabPane>
    </center>
</BorderPane>
